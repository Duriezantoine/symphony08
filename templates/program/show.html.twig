{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}

	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
		</div>
		<ul>
			{% for actor in program.actors %}
				<a href="{{ path("actor_show", { id: actor.id }) }}">
					<li>{{ actor.name }}
					</li>
				</a>
			{% else %}
				<li>Aucun acteur pour cette série</li>
			{% endfor %}
		</ul>
		{% for season in seasons %}
			<div>
				<a href="{{ path('program_season_show', { program_id: program.id, season_id: season.id}) }}">
					Saison
					{{ season.number }}:
					{{ season.year }}</a>
				<a href="{{ path('season_new') }}">
					<h3>Ajouter une saison</h3>
				</a>
			</div>
		{% else %}
			Aucune saison trouvée
		{% endfor %}
	</div>
	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>
{% endblock %}
